- model_class = Article
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @article.name
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @article.content
%p
  %strong= model_class.human_attribute_name(:published_on) + ':'
  %br
  = @article.published_on

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), articles_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_article_path(@article), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), article_path(@article), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
