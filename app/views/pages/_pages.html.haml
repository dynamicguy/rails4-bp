- model_class = Page
%table.datatable.ajaxed.display.table.table-striped.table-bordered{"data-source"=> pages_url(format: "json", jqdata: true)}
  %thead
    %tr
      %th{:width => 10} <input type="checkbox" class="toggle">
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:parent_id)
      %th= model_class.human_attribute_name(:depth)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody

