= simple_form_for @country, :html => { :class => 'form-horizontal' } do |f|
  = f.input :code
  = f.input :name
  = f.input :continent
  = f.input :region
  = f.input :surfacearea
  = f.input :indepyear
  = f.input :population
  = f.input :lifeexpectancy
  = f.input :gnp
  = f.input :gnpold
  = f.input :localname
  = f.input :governmentform
  = f.input :headofstate
  = f.input :capital
  = f.input :code2
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), countries_path, :class => 'btn'
