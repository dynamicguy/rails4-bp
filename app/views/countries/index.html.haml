- model_class = Country
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:continent)
      %th= model_class.human_attribute_name(:region)
      %th= model_class.human_attribute_name(:surfacearea)
      %th= model_class.human_attribute_name(:indepyear)
      %th= model_class.human_attribute_name(:population)
      %th= model_class.human_attribute_name(:lifeexpectancy)
      %th= model_class.human_attribute_name(:gnp)
      %th= model_class.human_attribute_name(:gnpold)
      %th= model_class.human_attribute_name(:localname)
      %th= model_class.human_attribute_name(:governmentform)
      %th= model_class.human_attribute_name(:headofstate)
      %th= model_class.human_attribute_name(:capital)
      %th= model_class.human_attribute_name(:code2)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @countries.each do |country|
      %tr
        %td= link_to country.id, country_path(country)
        %td= country.code
        %td= country.name
        %td= country.continent
        %td= country.region
        %td= country.surfacearea
        %td= country.indepyear
        %td= country.population
        %td= country.lifeexpectancy
        %td= country.gnp
        %td= country.gnpold
        %td= country.localname
        %td= country.governmentform
        %td= country.headofstate
        %td= country.capital
        %td= country.code2
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_country_path(country), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), country_path(country), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_country_path, :class => 'btn btn-primary'
