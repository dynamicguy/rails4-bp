- model_class = Country

%table.datatable.ajaxed.display.table.table-striped.table-bordered{"data-source"=> countries_url(format: "json", jqdata: true)}
  %thead
    %tr
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:continent)
      %th= model_class.human_attribute_name(:region)
      %th= model_class.human_attribute_name(:surfacearea)
      %th= model_class.human_attribute_name(:indepyear)
      %th= model_class.human_attribute_name(:population)
      %th= model_class.human_attribute_name(:lifeexpectancy)
      %th= model_class.human_attribute_name(:gnp)
      %th= model_class.human_attribute_name(:gnpold)
      %th= model_class.human_attribute_name(:localname)
      %th= model_class.human_attribute_name(:governmentform)
      %th= model_class.human_attribute_name(:headofstate)
      %th= model_class.human_attribute_name(:capital)
      %th= model_class.human_attribute_name(:code2)
      %th=t '.actions', :default => t('helpers.actions')
  %tbody
