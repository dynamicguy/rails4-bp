- model_class = Country
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @country.code
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @country.name
%p
  %strong= model_class.human_attribute_name(:continent) + ':'
  %br
  = @country.continent
%p
  %strong= model_class.human_attribute_name(:region) + ':'
  %br
  = @country.region
%p
  %strong= model_class.human_attribute_name(:surfacearea) + ':'
  %br
  = @country.surfacearea
%p
  %strong= model_class.human_attribute_name(:indepyear) + ':'
  %br
  = @country.indepyear
%p
  %strong= model_class.human_attribute_name(:population) + ':'
  %br
  = @country.population
%p
  %strong= model_class.human_attribute_name(:lifeexpectancy) + ':'
  %br
  = @country.lifeexpectancy
%p
  %strong= model_class.human_attribute_name(:gnp) + ':'
  %br
  = @country.gnp
%p
  %strong= model_class.human_attribute_name(:gnpold) + ':'
  %br
  = @country.gnpold
%p
  %strong= model_class.human_attribute_name(:localname) + ':'
  %br
  = @country.localname
%p
  %strong= model_class.human_attribute_name(:governmentform) + ':'
  %br
  = @country.governmentform
%p
  %strong= model_class.human_attribute_name(:headofstate) + ':'
  %br
  = @country.headofstate
%p
  %strong= model_class.human_attribute_name(:capital) + ':'
  %br
  = @country.capital
%p
  %strong= model_class.human_attribute_name(:code2) + ':'
  %br
  = @country.code2

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), countries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_country_path(@country), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), country_path(@country), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
