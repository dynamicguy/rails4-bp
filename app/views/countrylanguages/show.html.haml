- model_class = Countrylanguage
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:countrycode) + ':'
  %br
  = @countrylanguage.countrycode
%p
  %strong= model_class.human_attribute_name(:language) + ':'
  %br
  = @countrylanguage.language
%p
  %strong= model_class.human_attribute_name(:isofficial) + ':'
  %br
  = @countrylanguage.isofficial
%p
  %strong= model_class.human_attribute_name(:percentage) + ':'
  %br
  = @countrylanguage.percentage

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), countrylanguages_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_countrylanguage_path(@countrylanguage), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), countrylanguage_path(@countrylanguage), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
