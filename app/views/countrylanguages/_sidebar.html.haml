- model_class = Countrylanguage
.well
  .navbar.navbar-heading
    .navbar-inner
      .container
        %span.brand Quick Links
  %ul.nav.nav-tabs.nav-stacked
    %li= link_to t('links.labels.countrylanguage_list').html_safe, countrylanguages_path
    %li= link_to t('links.labels.new_countrylanguage').html_safe, new_countrylanguage_path
    %li= link_to t('links.labels.search_languages').html_safe, search_countrylanguages_path
    %li= link_to t('links.labels.Advanced_search').html_safe, advanced_search_countrylanguages_path

  - countrylanguages = Countrylanguage.all( limit: 5, order: "countrycode desc")
.well
  .navbar.navbar-heading
    .navbar-inner
      .container
        %span.brand Recent language
  %ul.nav.nav-tabs.nav-stacked
    - countrylanguages.each do |c|
      %li= link_to "#{c.language} <i class=\"icon-file float-right\"></i>".html_safe , c if c.present?
    %li= 'nothing found' unless countrylanguages.present?

