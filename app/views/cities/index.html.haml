- model_class = City
.page-header.row-fluid
  %h1.span6=t '.title', :default => model_class.model_name.human.pluralize
  .span6= link_to t('.new', :default => t("helpers.links.new")), new_city_path, :class => 'btn btn-primary pull-right'
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:countrycode)
      %th= model_class.human_attribute_name(:district)
      %th= model_class.human_attribute_name(:population)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @cities.each do |city|
      %tr
        %td= link_to city.id, city_path(city)
        %td= city.name
        %td= city.countrycode
        %td= city.district
        %td= city.population
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_city_path(city), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), city_path(city), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @cities
